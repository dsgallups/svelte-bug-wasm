{
	"useTabs": true,
	"singleQuote": true,
	"semi": true,
	"trailingComma": "all",
	"printWidth": 100,
	"quoteProps": "consistent",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",
	"tabWidth": 2,
	"proseWrap": "preserve",
	"endOfLine": "lf",
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},

		{
			"files": ".prettierrc",
			"options": {
				"parser": "json"
			}
		}
	]
}
